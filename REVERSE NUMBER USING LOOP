import java.util.*;
class reversenum
{
public static void main(String args[])
{
int num,rev=0,val,i;
Scanner sc=new Scanner(System.in);
System.out.println("enter the number to reversed:");
num=sc.nextInt();
for(i=1;i<=num;i++)
{
val=num%10;
rev=rev*10+val;
num=num/10;
}
System.out.println("the reversed number is:"+rev);
}
}
